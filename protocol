def send(msg, client_socket):
    final_msg = str(len(msg)) + "#" + msg
    client_socket.send(final_msg.encode())


def recv(client_socket):
    msg_len = ''
    msg = ''
    char = client_socket.recv(1).decode()
    while char != "#":
        msg_len += char
        char = client_socket.recv(1).decode()
    for a in range(int(msg_len)):
        msg += client_socket.recv(1).decode()
    return msg
